<%= render partial: "navigation/navigation", object: @task_list %>

<p style="color: green"><%= notice %></p>

<h4><%= @task_list.name.titleize %></h4>
<table id="tasks">
  <thead>
    <tr>
      <th>Status</th>
      <th>Due Date</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @task_list.tasks %>
  </tbody>
</table>

<div>
  <%= link_to "Back to task lists", task_lists_path %> |
  <%= link_to "Edit this task list", edit_task_list_path(@task_list) %> |
  <%= link_to "Add new task", new_task_list_task_path(@task_list) %>
  <%= button_to "Destroy this task list", @task_list, method: :delete %>
</div>



